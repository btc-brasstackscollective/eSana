{# app/Resources/views/contact.html.twig #}

{% extends 'base.html.twig' %}

{% block title %}Contact Page{% endblock %}

{% block body %}
	<div class="reach-out">
		<div class="content_container">
			<div class="row">
				<div class="col-xs-12 col-md-offset-3 col-md-6 text-center">
					<h2>REACH OUT </h1>
					<p>Our staff is here to make sure that your transition to better health care is effortless. If you have questions youâ€™d like to ask us, feel free! We have lots of ways for your to contact us today.</p>
				</div>
			</div>
		</div>
	</div>
	<div class="contact">
		<div class="content_container">
			<div class="row">
				<div class="col-xs-12 col-md-3 col-md-offset-3 text-center">
					<img src="assets/img/contact/PhoneIcon.png"/>
					<h3 class='price_text'>PHONE</h3>
					<a href="tel:1-888-241-7489" onclick="dataLayer.push({'event': 'Contact-Us-Phone-Number'});">1-888-241-7489</a>
				</div>
				<div class="col-xs-12 col-md-3 text-center">
					<img src="assets/img/contact/MailIcon.png"/>
					<h3 class='price_text'>EMAIL</h3>
					<a href="mailto:info@esanahealth.com" onclick="dataLayer.push({'event': 'Contact-Us-Email'});">info@esanahealth.com</a>
				</div>
			</div>
		</div>
	</div>
	<div class="contact-form">
		<div class="content_container">
			<div class="col-xs-12 col-md-offset-3 col-md-6">
				<div class="contact_us_form_message">
					<p></p>
				</div>
				
				<form id="contact_us_form">
					<div class="form-group">
						<label for="name"></label>
						<input type="text" class="form-control" id="name" name="name" placeholder="Your Name">
					</div>
					<div class="form-group">
						<label for="email"></label>
						<input type="email" class="form-control" id="email" name="email" placeholder="Your Email">
					</div>
					<div class="form-group">
						<label for="subject"></label>
						<input type="text" class="form-control" id="subject" name="subject" placeholder="Subject">
					</div>
					<div class="form-group">
						<label for="message"></label>
						<textarea rows="10" class="form-control textbox" id="message" name="message" placeholder="Your Message"></textarea>
					</div>
					
					<button id="contact_us_form_submit" type="submit" class="btn blue">Submit</button>
				</form>
			</div>
		</div>
	</div>
{% endblock %}